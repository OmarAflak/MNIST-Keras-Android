<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.aflak.mnistcnn.ui.MainActivity">

    <TextView
        android:id="@+id/activity_main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        android:text="Draw number"/>

    <com.aflak.mnistcnn.ui.DrawView
        android:id="@+id/activity_main_drawView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/activity_main_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict"
        android:layout_marginTop="30dp"/>

</LinearLayout>
